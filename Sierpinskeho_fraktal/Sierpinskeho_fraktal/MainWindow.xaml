        <Label Content="Sierpinský fraktál" FontSize="20" Height="48" HorizontalAlignment="Left" Margin="619,12,0,0" Name="lFraktal" VerticalAlignment="Top" Width="205" />
        <RadioButton Content="Pravouhlí pravý" FontSize="20" Height="26" HorizontalContentAlignment="Left" Name="rbPravouhliPravy" VerticalContentAlignment="Center" Margin="618,250,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="204" />
        <RadioButton Content="Rovnoramenný" Name="rbRovnoramenny" FontSize="20" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" IsChecked="True" Margin="618,186,0,0" HorizontalAlignment="Left" Width="204" Height="26" VerticalAlignment="Top" />
        <RadioButton Content="Pravoúhlí levý" FontSize="20" HorizontalContentAlignment="Left" Name="rbPravouhliLevy" VerticalContentAlignment="Center" Height="26" Margin="618,218,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="204" />
    </Grid>
</Window>
